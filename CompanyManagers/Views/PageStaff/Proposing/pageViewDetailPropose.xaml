                    <Border x:Name="InforUserComfirm" Height="{Binding ElementName=stp_InforUserComfirm, Path=ActualHeight}" BorderThickness="1" BorderBrush="{DynamicResource colorTheme}" VerticalAlignment="Top" MinWidth="320" MaxWidth="380" Margin="0 10 0 0" CornerRadius="10" Background="WhiteSmoke">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0" BlurRadius="10" Opacity="0.3"></DropShadowEffect>
