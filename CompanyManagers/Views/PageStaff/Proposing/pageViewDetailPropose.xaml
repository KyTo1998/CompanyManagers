                                                        <Style TargetType="Path">
                                                            <Setter Property="Data" Value="{StaticResource iconEditNote}"/>
                                                            <Setter Property="Fill" Value="{DynamicResource colorWriter}"/>
                                                        </Style>
                                                    </Path.Style>
                                                </Path>
                                                <TextBlock FontSize="16" FontWeight="Medium">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Chỉnh sửa"/>
