                                                <Run Text="ID:"/>
                                                <Run Text="{Binding idQLC}"/>
                                            </TextBlock>
                                        </Grid>
                                    </Grid>
                                    <Rectangle Margin="0 10 0 10" Fill="{StaticResource ColorGray1}" Height="0.5"/>
                                    <TextBlock Text="Người theo dõi" FontSize="18" FontWeight="Medium" Foreground="{StaticResource colorText1}" VerticalAlignment="Center"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" Height="40" Width="40" CornerRadius="50">
                                            <Border.Background>
                                                <ImageBrush ImageSource="\Resources/Image/AvatarUser.png"/>
                                            </Border.Background>
                                        </Border>
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Text="{Binding userName}" FontSize="16" FontWeight="Medium" Foreground="{StaticResource colorText1}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Row="1" FontSize="16" FontWeight="Regular" Foreground="{StaticResource colorText1}" VerticalAlignment="Center">
                                                <Run Text="ID:"/>
                                                <Run Text="{Binding idQLC}"/>
                                            </TextBlock>
                                        </Grid>
                                    </Grid>
                                    <Rectangle Margin="0 10 0 10" Fill="{StaticResource ColorGray1}" Height="0.5"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </WrapPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
